@using DancingGoat.Utils
@model string
@functions {
    public string ProjectGuid => ProjectUtils.GetProjectId();
}
<div class="footer-fixed-bottom">
    <div class="footer-fixed-bottom__content">
        <div class="footer-caption">
            <i class="icon-info-circle"></i>
            This is a sample website where you can see published content from your Kentico Cloud Sample Project. <a class="info-cloud" href="#" onclick="showLearnMore(event, true);  return false;">Learn more</a>
        </div>
        <div class="toggle">
            <label class="toggle__switch">
                <input class="preview-mode-switch" type="checkbox" onchange="togglePreviewMode(this.checked, '@ProjectGuid', true)" autocomplete="off">
                <span class="slider round"></span>
            </label>
            <div class="toggle__caption">
                <span class="toggle__title">Preview mode</span>
            </div>
        </div>
        <div class="edin-in-cloud-button">
            <a target="_blank" href="https://app.kenticocloud.com/@Model" class="btn-cloud btn-cloud__padding btn-cloud-info">
                <i class="btn-pen"></i> Edit in Kentico Cloud
            </a>
        </div>
    </div>
</div>

<!-- The Modal -->
<div id="modal-dialog" class="modal-dialog">
    <div class="modal-dialog__container">
        <div class="modal-dialog__pane">
            <div class="modal-dialog__header">
                <div class="modal-dialog__header-title">
                    <h3>Sample website</h3>
                </div>
                <div class="modal-dialog__header-close">
                    <a href="#" onclick="showLearnMore(event, false); return false;" class="modal-dialog__header__button-close">&times;</a>
                </div>
            </div>
            <div class="modal-dialog__content">
                <p>For demo purposes, we have deployed this website for you.</p>
                <p>See how to:</p>
                <ul>
                    <li>
                        <a target="_blank" href="https://app.kenticocloud.com/@Model" class="info-cloud">Edit content in your Sample Project</a> and see the changes on this website.
                    </li>
                    <li>
                        <a class="info-cloud" target="_blank" href="https://developer.kenticocloud.com/docs/running-a-sample-application">Run the sample website locally</a> by yourself.
                    </li>
                </ul>
            </div>
            <div class="modal-dialog__footer">
                <div>
                    <a target="_blank" href="#" onclick="showLearnMore(event, false); return false;" class="btn-cloud btn-cloud-cancel">
                        Cancel
                    </a>
                </div>
                <div>
                    <a target="_blank" href="https://developer.kenticocloud.com/docs/running-net-sample-application#section-making-changes-to-your-project" class="btn-cloud btn-cloud-info">Edit content</a>
                </div>

            </div>
        </div>
    </div>
</div>